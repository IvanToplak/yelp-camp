<% include ../partials/header %>

    <div class="row">
        <div class="col-md-4">
            <h1>
                <%= user.firstName + " " + user.lastName %>
            </h1>
            <div class="thumbnail">
                <img src="<%= user.avatar %>">
                <div class="caption">
                    <a href="mailto:<%= user.email %>">
                        <%= user.email %>
                    </a>
                </div>
            </div>
            <% if(currentUser && (user._id.equals(currentUser._id) || currentUser.isAdmin)) {%>
                <a class="btn btn-danger" href="/forgot">Forgot Your Password?</a>
                <% } %>
        </div>
        <div class="col-md-8">
            <h3>
                <%= user.username %>'s campgrounds:</h3>
            <ul>
                <% campgrounds.forEach(function(campground){ %>
                    <li>
                        <a href="/campgrounds/<%= campground.id %>">
                            <%= campground.name %>
                        </a>
                    </li>
                    <% }); %>
            </ul>
        </div>
    </div>

    <% include ../partials/footer %>